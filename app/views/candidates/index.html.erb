<h1>候選人列表</h1>

<!-- timeframe: 11:20 -->
<ul>
  <% @candidates.each do |candidate| %>
    <li>
      <%= link_to "投票給這位！", vote_candidate_path(candidate.id), class: 'btn bg-xs btn-warning', method: "put" %>
      <%= candidate.vote || 0 %>
      <%= link_to candidate.name, candidate_path(candidate.id) %>
      <%= link_to "編輯", edit_candidate_path(candidate.id), class: 'btn bg-xs btn-success' %>
      <%= link_to '刪除', candidate_path(candidate.id), class: 'btn bg-xs btn-danger', method: 'delete', data: { confirm: '確定嗎?!'}%>
    </li>
  <% end %>
</ul>


<%= link_to '新增候選人', new_candidate_path, class: 'btn btn-success btn-lg'%>

